{
  "name": "perf",
  "description": "Презентация о производительности",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "homepage": "https://github.com/d-rusakov-wp/perf",
  "scripts": {
    "dev": "shower serve & npm run tw:watch",
    "format": "prettier . --write",
    "build": "npm run tw:build",
    "publish": "npm run build & shower publish --files '**' --files '!{docs,node_modules}{,/**}' --files '!*.{md,toml,json,yml,lockb,config.js,config.ts}'",
    "tw:watch": "tailwindcss -i ./themes/tw/styles/main.css -o ./bundled/main.css --watch",
    "tw:build": "tailwindcss -i ./themes/tw/styles/main.css -o ./bundled/main.css --minify",
    "find-unused-images": "node ./themes/tw/packages/search-unused-images.js"
  },
  "dependencies": {
    "@shower/core": "^3.3.0",
    "@shower/ribbon": "3.5.2",
    "tailwindcss-motion": "0.4.3-beta"
  },
  "devDependencies": {
    "@commitlint/cli": "19.6.0",
    "@commitlint/config-conventional": "19.6.0",
    "@shower/cli": "^0.3.1",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.6",
    "htmlparser2": "9.1.0",
    "lefthook": "1.8.4",
    "path-exists-cli": "2.0.0",
    "picocolors": "1.1.1",
    "postcss": "8.4.49",
    "prettier": "3.4.1",
    "prettier-plugin-tailwindcss": "0.6.9",
    "tailwindcss": "3.4.15"
  },
  "browserslist": [
    "last 2 version",
    "not dead"
  ],
  "engines": {
    "node": ">= 18",
    "npm": ">= 9",
    "yarn": "Please use npm instead of yarn to install dependencies",
    "pnpm": "Please use npm instead of pnpm to install dependencies"
  },
  "files": [
    "build",
    "index.html",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/d-rusakov-wp/perf.git"
  },
  "sideEffects": [
    "*.css"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
